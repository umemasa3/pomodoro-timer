# 本番環境用環境変数テンプレート
# このファイルをコピーして .env.production を作成し、実際の値を設定してください

# アプリケーション設定
VITE_APP_ENV=production
VITE_APP_VERSION=1.0.0
VITE_APP_NAME="Pomodoro Timer"
VITE_APP_DESCRIPTION="効率的な時間管理のためのポモドーロタイマー"

# Supabase設定（本番環境）
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Sentry設定（エラー監視）
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_RELEASE=1.0.0

# 分析・監視設定
VITE_VERCEL_ANALYTICS_ID=your-analytics-id
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# 機能フラグ
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true

# パフォーマンス設定
VITE_ENABLE_BUNDLE_ANALYZER=false
VITE_ENABLE_SOURCE_MAPS=false

# セキュリティ設定
VITE_ENABLE_CSP=true
VITE_ALLOWED_DOMAINS="pomodoro-timer.vercel.app,*.supabase.co,*.sentry.io"

# API設定
VITE_API_TIMEOUT=10000
VITE_API_RETRY_COUNT=3

# キャッシュ設定
VITE_CACHE_VERSION=1.0.0
VITE_SW_CACHE_NAME=pomodoro-timer-v1