{
  "name": "pomodoro-timer",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:analyze": "tsc -b && vite build --mode analyze",
    "build:production": "NODE_ENV=production tsc -b && vite build --mode production",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:unit:watch": "vitest --config vitest.config.ts",
    "test:property": "vitest run --config vitest.property.config.ts",
    "test:property:watch": "vitest --config vitest.property.config.ts",
    "test:all": "pnpm run test:unit && pnpm run test:property",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "preview": "vite preview",
    "preview:production": "vite preview --mode production",
    "prepare": "husky",
    "task:status": "../scripts/task-complete.sh",
    "task:start": "../scripts/start-task.sh",
    "task:finish": "../scripts/finish-task.sh",
    "vercel:build": "pnpm install --frozen-lockfile && pnpm run build:production",
    "vercel:dev": "vercel dev",
    "size-check": "npx bundlesize",
    "lighthouse": "npx lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json",
    "type-check": "tsc --noEmit",
    "ci:lint": "pnpm run lint && pnpm run format:check",
    "ci:test": "pnpm run test:unit --run --reporter=verbose",
    "ci:test:property": "pnpm run test:property --run --reporter=verbose",
    "ci:test:e2e": "pnpm run test:e2e",
    "ci:build": "pnpm run type-check && pnpm run build",
    "ci:security": "pnpm audit --audit-level moderate",
    "ci:all": "pnpm run ci:lint && pnpm run ci:test && pnpm run ci:test:property && pnpm run ci:build",
    "lighthouse:local": "lhci autorun",
    "lighthouse:production": "lhci collect --url=https://pomodoro-timer.vercel.app --numberOfRuns=3 && lhci assert",
    "monitoring:start": "pnpm run dev & pnpm run lighthouse:local",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject ./dist && sentry-cli sourcemaps upload ./dist",
    "analytics:setup": "vercel env add VITE_VERCEL_ANALYTICS_ID",
    "health-check": "curl -f http://localhost:3000/api/health-check || exit 1",
    "core-web-vitals": "node -e \"console.log('Core Web Vitals測定を開始します...'); setTimeout(() => { console.log('測定完了: ブラウザのコンソールで結果を確認してください'); process.exit(0); }, 2000)\"",
    "core-web-vitals:test": "pnpm run dev & sleep 5 && pnpm run lighthouse:local && kill %1",
    "performance:measure": "pnpm run build && pnpm run preview & sleep 3 && pnpm run lighthouse http://localhost:4173 --output=json --output-path=./core-web-vitals-report.json && kill %1"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "@sentry/react": "^10.32.1",
    "@sentry/vite-plugin": "^4.6.1",
    "@supabase/supabase-js": "^2.89.0",
    "framer-motion": "^12.23.26",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^6.30.2",
    "vite-plugin-pwa": "^1.2.0",
    "workbox-window": "^7.4.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@fast-check/vitest": "^0.2.4",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/react-router-dom": "^5.3.3",
    "@types/workbox-window": "^5.0.0",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "fast-check": "^4.5.2",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "supabase": "^2.70.5",
    "tailwindcss": "^3.4.19",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^4.0.16"
  }
}
