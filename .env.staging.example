# ステージング環境用環境変数テンプレート
# このファイルをコピーして .env.staging を作成し、実際の値を設定してください

# アプリケーション設定
VITE_APP_ENV=staging
VITE_APP_VERSION=1.0.0-staging
VITE_APP_NAME="Pomodoro Timer (Staging)"
VITE_APP_DESCRIPTION="効率的な時間管理のためのポモドーロタイマー（ステージング環境）"

# Supabase設定（ステージング環境）
VITE_SUPABASE_URL=https://your-staging-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-staging-anon-key-here

# Sentry設定（エラー監視）
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_SENTRY_ENVIRONMENT=staging
VITE_SENTRY_RELEASE=1.0.0-staging

# 分析・監視設定
VITE_VERCEL_ANALYTICS_ID=your-staging-analytics-id
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# 機能フラグ
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=true

# パフォーマンス設定
VITE_ENABLE_BUNDLE_ANALYZER=true
VITE_ENABLE_SOURCE_MAPS=true

# セキュリティ設定
VITE_ENABLE_CSP=true
VITE_ALLOWED_DOMAINS="pomodoro-timer-staging.vercel.app,*.supabase.co,*.sentry.io"

# API設定
VITE_API_TIMEOUT=15000
VITE_API_RETRY_COUNT=5

# キャッシュ設定
VITE_CACHE_VERSION=1.0.0-staging
VITE_SW_CACHE_NAME=pomodoro-timer-staging-v1

# デバッグ設定
VITE_DEBUG_MODE=true
VITE_ENABLE_CONSOLE_LOGS=true